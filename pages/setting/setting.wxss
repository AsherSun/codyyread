/* setting.wxss */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: center;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  vertical-align: middle;
  align-items: center;
}

.switch-type {
  align-items: flex-end;
  margin-right: 30rpx;
  margin-left: 200rpx;
}

.login-type {
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.btn-area {
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.userinfo {
  display: flex;
  height: 380rpx;
  flex-direction: row;
  align-items: center;
  margin-left: 50rpx;
}

.userinfo-avatar {
  width: 228rpx;
  height: 228rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 30rpx;
}

.userinfo-nickname {
  color: #333;
}

.userinfo-partment {
  color: #aaa;
  margin-top: 80rpx;
}

.usermotto {
  margin-top: 200px;
}

.divider {
  width: 100%;
  height: 1rpx;
  color: #aaa;
  background-color: gainsboro;
}

.my-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  width: 100%;
  margin-top: 40rpx;
}

.my-tag {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
}

.my-item-text {
  margin: 15rpx 0;
  color: #2c3e50;
}
